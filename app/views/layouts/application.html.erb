<! DOCTYPE html>
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset ="utf-8">
  <title>Bookers</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%=javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>



<body>
        <header class="navbar navbar-fixed-top navbar-inverse">
          <div class="container">

            <nav class="nav navbar navbar-left">
              <span>Bookers</span>
            </nav>

            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                    <li><%= link_to ' Home', user_path(current_user.id), class: "glyphicon glyphicon-home home"%></li>
                    <li><%= link_to ' Users', users_path, class: "glyphicon glyphicon-user users" %> </li>
                    <li><%= link_to ' Books', books_path, class: "glyphicon glyphicon-book books" %></li>
                    <li><%= link_to ' Log out', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
                <% else %>
                    <li><%= link_to 'Home',root_path, class: "glyphicon glyphicon-home home" %></li>
                    <li><%= link_to 'About', "/home/about", class: "glyphicon glyphicon-link about" %></li>
                    <li><%= link_to 'Sign up', new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
                     <li><%= link_to 'Log in', new_user_session_path,  class: "glyphicon glyphicon-log-in sign_in" %></li>
                <% end %>
            </ul>
          </div>
        </header>

        <div class="container" style= "margin-top: 50px;">
          <% if flash[:notice] %>
          <%= flash[:notice] %>
          <% end %>
          <%= yield %>
        </div>
<footer>
<div class="container">
<div class="row">
<div class="col-xs-3 col-xs-offset-9">
<p class="copy-right">CopyRight Infratop.inc</p>
</div>
</div>
</div>

</body>
<html>