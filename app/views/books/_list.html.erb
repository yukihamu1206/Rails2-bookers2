<div class="col-xs-3">
	<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image,size: "100x100",format: 'jpeg', fallback:"no_image.jpg" %>
	<table class="table">
		<tr>
			<th>name</th>
			<th class="user_list"><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th class="user_list"><%= @user.introduction %></th>

	</table>
		<div class="setting">
		<%=link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_7041" %>
	    </div>


	<%= form_for(@post_book) do |f| %>
		<h2  class="new-book">New book</h2>
			<div class="row">
				<h4>Title</h4>
					<%=f.text_field :title, :class => 'col-xs-12'  %>
			</div>
			<div class="row">
				<h4>body</h4>
					<%=f.text_area :body, :class => 'col-xs-12' %>
			</div>
			<div class="action-row row">
				<%= f.submit "Create Book", :class => "col-xs-12 btn btn-primary" %>
			</div>
	<% end %>
</div>
