<div class="body">
    <div class="container">
		<% flash.each do |key, value| %>
	    <%= content_tag(:div, value, class: "#{key}") %>
	    <% end %>
<!-- form_for -->
	<div class="row">
		<%= render'books/list' %>
			<div class="col-xs-9">
				<h2>Books</h2>
					<table class="table  border-top">
						<thead>
							<tr>
								<th>Title</th>
								<th>Body</th>
							</tr>
						</thead>
						<% @books.each do |book| %>
							<tr>
								<th><%= attachment_image_tag @user, :profile_image,size: "40x40",format: 'jpeg', fallback:"no_image.jpg" %></th>
								<th><%=link_to book.title, book_path(book) %></th>
								<th><%= book.body %>n</th>
							</tr>
						<% end %>
					</table>
			</div>
		</div>
	</div>
</div>