<div class="body">
  <div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= @user.errors.count %>errors prohibited this obj from being saved: 
              </h2>
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        <h2>User info</h2>

        <%= form_for(@user) do |f| %>

        <div class="field"> 
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: @user.name %>
        </div>

        <div class="field">
          <label>Image</label>
          <%= f.attachment_field :profile_image, class: "user-edit-form" %>
        </div>


        <div class="field">
          <label>Introduction</label>
          <%= f.text_field :introduction, class: "intorduction-edit-form" %>
        </div>
        

        <div class="actions">
          <%= f.submit "Update User" %>
        </div>
        
        <% end %>


    </div>
  </div>
</div>
